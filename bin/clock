#!/usr/bin/env ruby
require 'timeclock'

def help
  puts "Usage:"
  puts ""
  puts "clock in"
  puts "clock out"
  puts "clock submit"
  puts "clock clear"
end

if ARGV.first == nil
  puts "Error: incorrect syntax"
  puts "try clock --help"
else
  Timeclock::Clock.check_file
  Timeclock::Clock.check_email
  case ARGV.first
  when "in"
    Timeclock::Clock.clock_in
  when "out"
    Timeclock::Clock.clock_out
  when "submit"
    Timeclock::Clock.send
  when "send"
    Timeclock::Clock.send
  when "clear"
    Timeclock::Clock.clear
  when "total"
    puts Timeclock::Clock.total
  when "daily"
    require 'pp'
    string = pp Timeclock::Clock.daily_log, string
    puts "hello #{string.join("\n")}"

  when "automate"
    Timeclock::Clock.automate
  when 'begin'
    Timeclock::Clock.setup_automate
  when 'end'
    Timeclock::Clock.unsetup_automate
  when "clay"
    puts Timeclock::Clock.clay
  else
    help
  end
  
end

