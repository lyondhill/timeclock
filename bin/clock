#!/usr/bin/env ruby
require 'timeclock'

def help
  puts "Usage:"
  puts ""
  puts "clock in"
  puts "clock out"
  puts "clock send"
  puts "clock clear"
end

if ARGV.first == nil
  puts "Error: incorrect syntax"
  puts "try clock --help"
else
  TimeClock::Clock.check_file
  case ARGV.first
  when "in"
    TimeClock::Clock.clock_in
  when "out"
    TimeClock::Clock.clock_out
  when "submit"
    TimeClock::Clock.send
  when "send"
    TimeClock::Clock.send
  when "clear"
    TimeClock::Clock.clear
  when "--help"
    help
  else
    help
  end
  
end

