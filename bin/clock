#!/usr/bin/env ruby
require 'timeclock'

def help
  puts "Usage:"
  puts ""
  puts "clock in"
  puts "clock out"
  puts "clock submit"
  puts "clock clear"
end

if ARGV.first == nil
  puts "Error: incorrect syntax"
  puts "try clock --help"
else
  Timeclock::Clock.check_file
  case ARGV.first
  when "in"
    Timeclock::Clock.clock_in
  when "out"
    Timeclock::Clock.clock_out
  when "submit"
    Timeclock::Clock.send
  when "send"
    Timeclock::Clock.send
  when "clear"
    Timeclock::Clock.clear
  when "total"
    puts Timeclock::Clock.total
  else
    help
  end
  
end

